generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts     Account[]
  sessions     Session[]
  createdRooms Room[]        @relation("RoomCreator")
  roomMembers  RoomMember[]
  typingSpeeds TypingSpeed[] // Added relation for TypingSpeed
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now()) // ✅ Add this line or modify if already present
  updatedAt DateTime @updatedAt // ✅ Optional but recommended

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Room management
model Room {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  creatorId   String
  joinCode    String     @unique
  maxPlayers  Int        @default(4)
  isPrivate   Boolean    @default(false)
  status      RoomStatus @default(WAITING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  expiresAt   DateTime // Room expiration time
  codeValid   Boolean    @default(true)
  textLength  TextLength @default(MEDIUM)
  timeLimit   Int? // in seconds
  customText  String? // for custom text mode

  // Relations
  creator      User          @relation("RoomCreator", fields: [creatorId], references: [id])
  members      RoomMember[]
  typingSpeeds TypingSpeed[]

  @@index([status])
  @@index([expiresAt])
}

model RoomMember {
  id       String           @id @default(auto()) @map("_id") @db.ObjectId
  roomId   String
  userId   String
  role     RoomMemberRole   @default(PLAYER)
  status   RoomMemberStatus @default(JOINED)
  joinedAt DateTime         @default(now())

  // Relations
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
}


model TypingSpeed {
  id              String                 @id @default(auto()) @map("_id") @db.ObjectId
  userId          String                 @db.ObjectId
  roomId          String                 @db.ObjectId
  wpm             Int
  correctword     Int
  duration        Int                    // Total typing duration per session
  createdAt       DateTime               @default(now())

  // Relations
  user            User                   @relation(fields: [userId], references: [id])
  room            Room                   @relation(fields: [roomId], references: [id])
  userStatus    UserStatus            @default(ACTIVE)
  charPerformance CharacterPerformance[] 

  @@unique([userId, roomId])
}

model CharacterPerformance {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  char            String      // The character (e.g., "k")
  
  // Metrics for THIS specific session
  avgTimePerChar  Float       // Average time (latency) in ms
  maxTimePerChar  Float       // Maximum time taken for this char
  errorFrequency  Int         @default(0) // How many times missed in this session
  
  // Relations
  typingSpeedId   String      @db.ObjectId
  typingSpeed     TypingSpeed @relation(fields: [typingSpeedId], references: [id], onDelete: Cascade)
  // Optional: Link to User for global queries
  userId          String      @db.ObjectId

  @@index([typingSpeedId])
  @@index([userId])
}
enum UserStatus {
  ACTIVE
  LEFT
}

enum RoomStatus {
  WAITING
  IN_GAME
  FINISHED
  EXPIRED
}

enum TextLength {
  SHORT // ~50 words
  MEDIUM // ~100 words
  LONG // ~200 words
  MARATHON // ~500+ words
}

enum RoomMemberRole {
  CREATOR
  PLAYER
  SPECTATOR
}

enum RoomMemberStatus {
  JOINED
  READY
  PLAYING
  FINISHED
  LEFT
}

enum GameStatus {
  WAITING
  STARTING
  IN_PROGRESS
  FINISHED
  CANCELLED
}


enum TimePeriod {
  DAILY
  WEEKLY
  MONTHLY
  ALL_TIME
}


enum Difficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}
